{
  "name": "fashion-archive-ui",
  "version": "1.0.0",
  "description": "Fashion Archive System - Modern UI with Classic Mac Styling",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev-react": "react-scripts start",
    "build": "react-scripts build",
    "build-electron": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "fuse.js": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron-builder": "^24.6.0",
    "electron-is-dev": "^2.0.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
